    "version": "0.2.0",
    "configurations": [

        {
            "name": "Debug Clinical Outreach Agent",
            "type": "debugpy",
            "request": "launch",
            "module": "agent_outreach.graph",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true,
            "stopOnEntry": false,
            "args": []
        },
        {
            "name": "Debug Echo Agent",
            "type": "python",
            "request": "launch",
            "module": "agent_outreach.echo_agent",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true
        }
    ]
}